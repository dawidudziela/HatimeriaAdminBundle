<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">
    
    <route id="hatimeria_admin" pattern="/">
        <default key="_controller">HatimeriaAdminBundle:Admin:index</default>
    </route>
    
    <route id="hatimeria_admin_language_switch" pattern="/language/{_locale}">
        <default key="_controller">HatimeriaAdminBundle:Admin:language</default>
    </route>    
    
</routes>
